<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
        android:id="@+id/top_rated_movie_posterImage"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:scaleType="fitXY"
        android:padding="2dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/top_rated_movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Title"
            android:textColor="?attr/colorPrimary"
            android:textSize="26sp"/>

        <TextView
            android:id="@+id/top_rated_movie_overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1"
            android:lines="4"
            android:text="overview"
            android:textSize="12sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/top_rated_movie_hardcoded_release"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/releaseDate"
                android:text="Release Date:"/>

            <TextView
                android:id="@+id/top_rated_movie_releaseDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:text="Release Date"

                android:textColor="?attr/colorPrimary"
                android:textSize="14sp"/>


        </RelativeLayout>
    </LinearLayout>

</LinearLayout>